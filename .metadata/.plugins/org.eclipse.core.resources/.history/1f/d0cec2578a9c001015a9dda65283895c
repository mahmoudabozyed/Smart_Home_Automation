#include "common_macros.h"
#include "GPIO.h"
#include <avr/io.h>

void GPIO_setupPinDirection(uint8 port_num, uint8 pin_num,pinDirection status){
	if((port_num > NUM_OF_PORTS)|| (pin_num > NUM_OF_PIN_PER_PORT)){

	}else{
		switch(port_num){
		case PORTA_ID:
			if(status == pin_output){
				SET_BIT(DDRA, pin_num);
			}
		}
	}
}


