/******************************************************************************
*
* Module: DC Motor
*
* File Name: motor.h
*
* Description: Header file for the DC Motor driver
*
* Author: Mahmoud Abouzeid
*
*******************************************************************************/

#ifndef DCMOTOR_H_
#define DCMOTOR_H_

#include "GPIO.h"
/*******************************************************************************
 *                                Definitions                                  *
*******************************************************************************/


#define MOTOR_PORT_IN1			PORTB_ID
#define MOTOR_PIN_IN1			PIN0_ID


#define MOTOR_PORT_IN2			PORTB_ID
#define MOTOR_PIN_IN2			PIN1_ID


#define MOTOR_PORT_EN1			PORTB_ID
#define MOTOR_PIN_EN1			PIN3_ID

typedef enum
{
	Stop,	/* 0 */
	CW,		/* 1 */
	A_CW	/* 2 */
} DcMotor_State;


/*******************************************************************************
 *                      Functions Prototypes                                   *
*******************************************************************************/

/*
 * Initializes the DC motor by setting the direction for the motor pins
 * and stopping the motor at the beginning
 */
void DcMotor_Init(void);


void DcMotor_Rotate(DcMotor_State state, uint8 speed);


#endif /* DCMOTOR_H_ */
