#include "BUZZER.h"
#include "GPIO.h"


void Buzzer_init(void){
	GPIO_setupPinDirection(BUZZER_PORT, BUZZER_PIN, pin_output);
	GPIO_writePin(BUZZER_PORT, BUZZER_PIN, LOW);
}

void Buzzer_on(void){
	GPIO_writePin(BUZZER_PORT, BUZZER_PIN, HIGH);
}

void Buzzer_off(void){
	GPIO_writePin(BUZZER_PORT, BUZZER_PIN, LOW);
}
